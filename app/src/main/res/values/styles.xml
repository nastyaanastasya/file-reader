<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="FileName" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/filename_example</item>
    </style>

    <style name="FileDate" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
        <item name="android:text">@string/file_date_example</item>
    </style>

    <style name="FileSize" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
        <item name="android:text">@string/file_size_example</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="background">?colorPrimary</item>
        <item name="title">@string/title_files</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
